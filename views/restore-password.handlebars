<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <img id="unipd-logo" src="/img/Logo_Universita_Padova.png">
                    <h5 class="card-title text-center">Ripristino Password Referente</h5>
                    <form class="form-signin" method="POST" action="/referent/restorePassword">
                        {{#if successMessage}}
                            <div id="restore-password-success" class="alert alert-success" role="alert">
                                <h4 class="alert-heading text-center">Mail inviata</h4>
                                <p class="text-center">{{successMessage}}</p>
                            </div>
                        {{else}}
                        <p class="text-center">Inserisci la tua email di registrazione, riceverai una email con un link
                            per cambiare la password.</p>
                        <div class="form-label-group">
                            <input type="email" id="inputEmail" name="email" class="form-control"
                                placeholder="Email address" required autofocus>
                            <label for="inputEmail">Indirizzo Email</label>
                        </div>
                        <a href="login">Torna al Login</a>
                        <hr>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Invia email</button>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>